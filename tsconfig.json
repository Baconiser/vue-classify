{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": [
      "dom",
      "scripthost",
      "esnext"
    ],
    "target": "es2015",
    "strict": false,
    "strictPropertyInitialization": false,
    "outDir": "./lib",
    "preserveConstEnums": true,
    "removeComments": false,
    "inlineSourceMap": false,
    "declaration": true,
    "experimentalDecorators": true,
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "include": [
    "src/**/*",
    "typings/*"
  ],
  "exclude": [
    "node_modules",
    "**/*-spec.ts"
  ]
}
